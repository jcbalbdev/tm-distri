---
interface Props {
  href:string;
  textdownload:string;
  text:string;
  bgcolor:string;
  hover?:string;
  transition?:string;
  stylesextra?:string;
  menu_hamburguesa?:string;
}
const {menu_hamburguesa,href,textdownload,text ,bgcolor,hover,transition,stylesextra} = Astro.props;
---

<button class=` ${menu_hamburguesa} md:flex items-center space-x-4`>
  <a href={href} 
   download={textdownload}
   class=`inline-block bg-${bgcolor} ${hover} text-white text_sm md:text-base font-bold px-6 py-2 rounded-2xl shadow-md  ${transition} ${stylesextra} text-center cursor-pointer`>
    {text}
  </a>
</button>