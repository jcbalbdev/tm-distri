<header class="bg-blue-600 text-white">
  <!-- Top Bar -->
  <div class="bg-yellow-400 text-blue-600 text-center text-lg font-bold py-2">
    <p>Envíos gratuitos para pedidos de S/150.00 o más.</p>
  </div>

  <!-- Main Header -->
  <div class="flex justify-between items-center px-4 py-3 md:px-8">
    <!-- Logo -->
    <div class="flex items-center">
      <h1 class="text-3xl sm:text-4xl md:text-6xl font-bold">
        <span class="text-yellow-400">tm</span> 
        <span class="text-sm block">EMBASES PLÁSTICOS</span>
      </h1>
    </div>

    <!-- Hamburger Menu for Small Screens -->
    <div class="md:hidden">
      <button id="menu-btn" class="text-2xl focus:outline-none">
        <i class="fas fa-bars"></i>
      </button>
    </div>

    <!-- Buttons -->
    <div class="hidden md:flex items-center space-x-4">
      <button class="bg-yellow-400 text-blue-600 font-bold px-4 py-2 rounded-full">
        DESCARGAR CATÁLOGO
      </button>
    </div>
  </div>

  <!-- Navigation -->
  <nav id="menu" class="hidden md:block bg-white text-blue-600 py-2 md:py-0">
    <div class="flex flex-col md:flex-row justify-around items-center md:space-x-4 text-lg font-bold">
      <a href="#" class="py-2 px-4 hover:bg-yellow-400 transition-colors duration-300">TIENDA</a>

      <!-- Dropdown for SERVICIOS -->
      <div class="relative group">
        <a href="#" class="flex items-center py-2 px-4 hover:bg-yellow-400 transition-colors duration-300">
          SERVICIOS
          <i class="fas fa-chevron-down ml-2"></i>
        </a>
        <div class="absolute hidden group-hover:block bg-white border border-gray-300 shadow-lg mt-2 rounded w-40 z-10">
          <a href="#" class="block px-4 py-2 hover:bg-yellow-400">Restaurante</a>
          <a href="#" class="block px-4 py-2 hover:bg-yellow-400">Pizzería</a>
          <a href="#" class="block px-4 py-2 hover:bg-yellow-400">Delivery</a>
        </div>
      </div>

      <!-- Dropdown for CATEGORÍAS -->
      <div class="relative group">
        <a href="#" class="flex items-center py-2 px-4 hover:bg-yellow-400 transition-colors duration-300">
          CATEGORÍAS
          <i class="fas fa-chevron-down ml-2"></i>
        </a>
        <div class="absolute hidden group-hover:block bg-white border border-gray-300 shadow-lg mt-2 rounded w-40 z-10">
          <a href="#" class="block px-4 py-2 hover:bg-yellow-400">Categoría 1</a>
          <a href="#" class="block px-4 py-2 hover:bg-yellow-400">Categoría 2</a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  // Script para mostrar/ocultar el menú en pantallas pequeñas
  const menuBtn = document.getElementById('menu-btn');
  const menu = document.getElementById('menu');

  menuBtn.addEventListener('click', () => {
    menu.classList.toggle('hidden');
  });
</script>
