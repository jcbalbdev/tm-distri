---
interface Props {
  src:string;
  alt?:string;
  title:string;
  subtitle:string;
  body?:string;
  text?:string;
}


const {src,alt,title,subtitle,body,text} = Astro.props;
---

<div class="container mx-auto px-4 md:px-8 py-12">
  <div class="flex flex-col md:flex-row gap-8 md:gap-12 items-center">
    <!-- Imagen placeholder (reemplazar con la imagen final) -->
    <div class="w-full h-auto md:w-1/2 bg-white aspect-auto rounded-lg flex items-center justify-center">
      <img src={src} alt={alt}>
    </div>

    <div class="w-full md:w-1/2 space-y-6">
      <h1 class="text-3xl md:text-4xl font-bold text-blue-500">
        {title}
      </h1>
      
      <div class="space-y-4">
        <p class="text-xl text-gray-800">
          {subtitle}
        </p>
        
        <div class="space-y-2">
          <p class="text-gray-500">
            {body}
          </p>
        </div>
      </div>

      <!-- Tamaños -->
      <!-- <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
        <div class="border-2 border-gray-200 rounded-lg p-3 text-center">
          <span class="font-medium">6OZ</span>
        </div>
        <div class="border-2 border-gray-200 rounded-lg p-3 text-center">
          <span class="font-medium">8OZ</span>
        </div>
        <div class="border-2 border-gray-200 rounded-lg p-3 text-center">
          <span class="font-medium">10OZ</span>
        </div>
        <div class="border-2 border-gray-200 rounded-lg p-3 text-center">
          <span class="font-medium">12OZ</span>
        </div>
      </div> -->

      <!-- Botón Comprar Ahora -->
      
      <button class="w-full md:w-auto bg-teal-500 hover:bg-yellow-400 text-white font-bold
                  px-6 py-2 rounded-2xl shadow-md transition-all">
      <a href=`https://wa.me/51956773758?text=${text}`
   target="_blank"
   rel="noopener noreferrer"
   class="no-underline">
              COMPRAR AHORA
            </a>
          </button>
    </div>
  </div>
</div>

<script is:inline>
  document.getElementById('whatsappButton').addEventListener('click', () => {
    const encodedMessage = encodeURIComponent(`{whatsappMessage}`);
    window.open(`https://wa.me/{whatsappNumber}?text=${encodedMessage}`, '_blank');
  });
</script>

<style is:global>
  @media (min-width: 768px) {
    .aspect-square {
      aspect-ratio: 1 / 1;
    }
  }
</style>