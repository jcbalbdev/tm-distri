---
interface Props {
  num_tlf:string;
  text_tlf:string;
  text_botton:string;
  bgcolor:string;
  hover?:string;
  transition?:string;
  stylesextra?:string;
}
const {num_tlf,text_tlf,text_botton ,bgcolor,hover,transition,stylesextra} = Astro.props
---

<button class=`w-full md:w-auto bg-${bgcolor} ${hover} text-white font-bold
                  px-6 py-2 rounded-2xl shadow-md ${transition}`>
      <a href=`https://wa.me/${num_tlf}?text=${text_tlf}`
   target="_blank"
   rel="noopener noreferrer"
   class="no-underline">
    {text_botton}
  </a>
</button>